@model HomeViewModel
<div style="margin-top:2em;"> 
<div>
	@await Html.PartialAsync("Carousel")
</div>

<h4 style="text-align:center; margin-top:2em;" >Pizzas of the week</h4>
<h5 style="text-align:center; margin-bottom:1em;" >Our weekly section - just for you!</h5>

<div class="row">
	@foreach(var pizza in Model.PizzasOfTheWeek)
	{
		@Html.Partial("PizzasOfTheWeekSummary",pizza)
	}
</div>
</div>